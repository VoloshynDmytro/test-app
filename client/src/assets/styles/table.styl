.table-wrapper
    background: #fff
.table
    width: 100%
    border-top: 1px solid $light_blue
    &__header
        padding 15px 20px
        display: flex
        justify-content: space-between
        align-items: center
    &__title
        font-size 20px
        color: #2f313d
        margin: 0
    &__controls
        display: block
        .form__element-holder
            display: inline-block
            margin-left: 15px
    &__footer
        padding: 20px
        display: flex
        justify-content: space-between
        align-items: center
    &__filter
        .form__element-holder
            display inline-block
    &__filter-text
        color: #2f313d
        font-size: 14px
        display: inline-block
        margin-right: 15px
    tr.table-row:nth-child(2n)
      &:hover
        td
          background-color: #faffeb
      td
          background: #fcfdfe
  tr.table-row
    cursor: pointer
    &:hover
      td
        background-color: #faffeb
    &.selected
      td
        background-color: #fff4c2
  th
      padding: 10px 15px
      line-height: 20px
      background: $gray
      border-bottom: 1px solid $light_blue
      text-align: left
      font-size: 14px
      font-weight: bold
      white-space: nowrap
      &:first-child
          padding-left: 20px
      &:last-child
          padding-right: 20px
      .sortable
          i
              position: relative
              top: 2px
          &:hover
              cursor: pointer
          &.sort
              color: $current
              i
                  color: $current
  td
      padding: 10px 15px
      border-bottom: 1px solid $light_blue
      font-size: 13px
      color: $dark_blue
      text-align: left
      &:first-child
          padding-left: 20px
      &:last-child
          padding-right: 20px
