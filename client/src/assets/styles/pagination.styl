.pagination
  border: 1px solid $light_blue
  display: inline-block
  padding: 0
  li
    list-style: none
    display: inline-block
  &:after
    display: table
    clear: both
    content: ""
  &__item
    float: left
    border-right: 1px solid $light_blue
    min-width: 32px
    padding: 5px 10px
    color: #2f313d
    font-size: 14px
    line-height: 22px
    display: block
    box-sizing: border-box
    text-decoration: none
    text-align center
    &:hover,
    &.active
      background: $light_blue
    &:last-child
      border-right: 0


