.ngdialog.ngdialog-theme-plain
  z-index: 999
  padding-top: 0
  padding-bottom: 0
  text-align: center
  &:after
    display: inline-block
    height: 100%
    margin-left: -0.05em
    content: ""
    vertical-align: middle
  .ngdialog-overlay
    background: rgba(43, 46, 56, 0.9);
  .ngdialog-content
    padding: 2em
    display: inline-block
    margin: 0
    vertical-align: middle

.modal
  font-size: 22px
  text-align: center
  color: #2f313d
  &__title
    font-size: 22px
    margin: 0 0 15px
    font-weight: normal
  &__username
    font-size: 28px
    display: block
    text-align: center
    margin-top: 5px
    font-weight bold

.ngdialog.modal_participants .ngdialog-content,
.ngdialog.modal_report-details .ngdialog-content
  padding: 10px 0 0
  width 800px
.ngdialog.modal_report .ngdialog-content,
.ngdialog.modal_block .ngdialog-content,
.ngdialog.modal_unblock .ngdialog-content
  width 590px
  .form
    margin-bottom: 25px
.ngdialog.modal_create-event .ngdialog-content
  width 590px

.ngdialog.modal_report-details
  .ngdialog-content
    padding: 0
    max-width 800px
    .buttons-wrapper
      padding: 0 20px 20px
      &__text
        color: #2f313d
        font-size 14px

.attach-photo
  height: 155px
  background: #a7b1c2
  border-radius: 3px
  position: relative
  width: 350px
  margin: 0 auto
  margin-bottom: 10px
  transition: 0.4s
  &:hover
    background-color: #6D7586
  &__label
    display: flex
    justify-content: center
    align-items: center
    flex-direction: column
    height: 100%
    width 100%
    color: #fff
    text-transform: uppercase
    text-align: center
    margin: 0
    font-size: 18px
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis
    cursor: pointer
    i
      font-size: 35px
  input
    display: none
