.ngdialog.ngdialog-theme-plain
  z-index: 999
  padding-top: 0
  padding-bottom: 0
  text-align: center
  &:after
    display: inline-block
    height: 100%
    margin-left: -0.05em
    content: ""
    vertical-align: middle
  .ngdialog-overlay
    background: rgba(43, 46, 56, 0.9);
  .ngdialog-content
    padding: 2em
    display: inline-block
    margin: 0
    vertical-align: middle

.modal
  font-size: 22px
  text-align: center
  color: #2f313d
  &__title
    font-size: 22px
    margin: 0 0 15px
    font-weight: normal

.ngdialog.modal_create-photo .ngdialog-content
  width 590px
