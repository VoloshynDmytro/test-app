.list-container
  padding: 5px 50px 5px 50px;

.list-wrapper
  .list-header
    padding: 0 50px
    display: flex
    h3
      flex: 1
    .form__element-holder
      i
        top: 40%
      flex: 1

  .item
    float: left;
    width: 100px;
    height: 100px;
    padding: 10px
    margin:0 10px 10px 0;
    background-color: #edeef0;
    -webkit-transition:all 1.0s ease;
    -moz-transition:all 1.0s ease;
    transition:all 1.0s ease;
    cursor: pointer
    i
      padding: 10px
      font-size: 16px
      color: $current
    span
      color: $current
      font-size: 14px


.list-wrapper.list-mode .item
  width:100%;
  height: 15px

