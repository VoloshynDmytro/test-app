.switcher
  width: 30px
  height: 18px
  position: relative
  transition: 0.4s
  cursor: pointer
  padding: 4px 0
  &__line
      height: 10px
      background: #bfd8b6
      border-radius: 5px
      transition: 0.4s
  &__circle
      height: 18px
      width: 18px
      border-radius: 50%
      position: absolute
      right: 0
      top: 0
      bottom: 0
      transition: 0.4s
      background: #fff
      box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.25)
  &.on
      .switcher__line
          background: #2eb5aa
  &.off
      .switcher__line
          background: #a7b1c2
      .switcher__circle
          transform: translateX(-12px)
.switcher-row
    display: flex
    justify-content: space-between
    align-items: center
    margin-bottom: 5px
    &:last-child
      margin-bottom: 0
.switcher-text
    text-align: left
    font-weight: 600

